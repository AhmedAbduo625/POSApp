<local:BasePage x:TypeArguments="core:ApplicationPageViewModel"
                x:Class="POSAppWPF.ApplicationPage"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                xmlns:local="clr-namespace:POSAppWPF"
                xmlns:core="clr-namespace:POSAppCore;assembly=POSAppCore"
                mc:Ignorable="d"
                d:DesignHeight="450"
                d:DesignWidth="800">
    <Grid d:Background="{StaticResource PrimaryLightGraySolidClorBrush}">


        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <local:SideMenuView Grid.Column="0"
                            Margin="0 0 -185 0"
                            Panel.ZIndex="2"
                            local:SideMenuAnimationProperty.Value="{Binding AppSettings.IsSideMenueVisible, Source={x:Static core:Locator.Intsnace}}" />

        <local:PageHostView Grid.Column="1"
                            CurrentPage="{Binding AppSettings.MainPagePage, Source={x:Static core:Locator.Intsnace}, Converter={local:MainPageValueConverter}}" />

    </Grid>
</local:BasePage>
